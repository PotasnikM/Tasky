<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    android:elevation="2dp"
    android:background="@drawable/layout_bg"
    android:id="@+id/task_row">

    <com.google.android.material.chip.Chip
        android:id="@+id/task_row_chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="3dp"
        android:text="@string/date_adding"
        app:chipIcon="@drawable/ic_baseline_date_range_24"
        app:layout_constraintStart_toStartOf="@id/task_radio_button"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/category_icon_School"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/layout_bg"
        android:padding="6dp"
        android:src="@drawable/ic_round_school_24"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/teal_grey" />

    <ImageView
        android:id="@+id/category_icon_Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/layout_bg"
        android:padding="6dp"
        android:src="@drawable/ic_round_home_24"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/teal_grey" />

    <ImageView
        android:id="@+id/category_icon_Personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/layout_bg"
        android:padding="6dp"
        android:src="@drawable/ic_round_person_24"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/teal_grey"/>

    <ImageView
        android:id="@+id/category_icon_Work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/layout_bg"
        android:padding="6dp"
        android:src="@drawable/ic_round_work_24"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/teal_grey" />


    <RadioButton
        android:id="@+id/task_radio_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:buttonTint="@color/yellow"
        android:padding="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/task_row_chip" />

    <TextView
        android:id="@+id/task_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:text="Task"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/task_radio_button"
        app:layout_constraintTop_toBottomOf="@id/task_row_chip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.1"/>

    <ImageButton
        android:id="@+id/note_button"
        android:layout_width="31dp"
        android:layout_height="33dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/layout_bg"
        android:clickable="true"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="6dp"
        android:src="@drawable/ic_round_notes_24"
        app:layout_constraintEnd_toStartOf="@id/task_row_chip"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

